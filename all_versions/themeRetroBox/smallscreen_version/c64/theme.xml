<theme>

    <formatVersion>4</formatVersion>
    <include>./../_inc/templates/16x9.xml</include>
	
	<!--Ajout du logo du système-->
    <view name="system, basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
		<textlist name="gamelist">
			<selectorColor>143952</selectorColor>
		</textlist>
	</view>
	
	<!--Ajout du gradient background-->
    <view name="basic">
		<image name="background_pattern" extra="true">
			<path>./../_inc/images/bg.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<color>aeaeae</color>
			<tile>false</tile>
		</image>
	</view>	
		
	<!--Ajout du gradient, le background des métadonnées-->
    <view name="detailed">
		<image name="background_pattern" extra="true">
			<path>./../_inc/images/bg-2.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<color>aeaeae</color>
			<tile>false</tile>
		</image>
	</view>

</theme>
